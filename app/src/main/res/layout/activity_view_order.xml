<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorPrimary">
	
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
		              android:orientation="vertical">
			<TextView
					android:text="تأكيدالطلب"
					android:gravity="center"
					android:textStyle="bold"
					android:textSize="22dp"
					android:layout_width="385dp"
					android:layout_height="60dp"
					android:id="@+id/textView35"
					android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
					android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
			/>
			<TextView
					android:hint="res name"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:id="@+id/res_name_confirm"/>
			<TextView
					android:hint="cus name"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:id="@+id/cus_name_confirm"/>
			<TextView
					android:hint="meal name"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:id="@+id/meal_name_confirm"/>
			<TextView
					android:hint="meal price"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:id="@+id/meal_price_confirm"/>
			<TextView
					android:hint="start_place_confirm"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:id="@+id/start_place_confirm"/>
			<TextView
					android:hint="end_place_confirm"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:id="@+id/end_place_confirm"/>
			<TextView
					android:hint="dilivary_bill"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:id="@+id/dilivary_bill"/>
			<TextView
					android:text="Cash Desired"
					android:layout_gravity="center"
					android:layout_margin="12dp"
					android:layout_width="match_parent"
					android:layout_height="45dp" android:id="@+id/cash_desired"/>
			<Button
					android:text="عرض مكان المطعم"
					android:layout_width="match_parent"
					android:background="@color/trueyellow"
					android:layout_margin="15dp"
					android:layout_height="wrap_content" android:id="@+id/view_place"/>
			<Button
					android:text="استلام الطلب "
					android:background="@color/trueyellow"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/take_order"/>
		</LinearLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>